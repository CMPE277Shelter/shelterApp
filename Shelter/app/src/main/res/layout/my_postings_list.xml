<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/list_border">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?android:attr/selectableItemBackground">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            <ImageView android:id="@+id/restaurant_imageview"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:scaleType="fitCenter"
                android:background="@android:color/darker_gray"
                android:cropToPadding="true"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <TextView android:id="@+id/property_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="101 San Fernando"
                android:paddingLeft="3dp"
                android:paddingTop="10dp"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_favorite_selected"
                android:layout_marginRight="20dp"/>
            <TextView android:id="@+id/property_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="Townhouse"
                android:paddingLeft="3dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/property_name"/>
            <TextView android:id="@+id/property_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="4th Street, San Jose, CA"
                android:paddingLeft="3dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/property_type"/>
            <TextView android:id="@+id/property_rent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="$ 3400/month"
                android:paddingLeft="3dp"
                android:layout_marginTop="35dp"
                android:layout_below="@+id/property_address"
                android:background="@android:color/darker_gray"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>