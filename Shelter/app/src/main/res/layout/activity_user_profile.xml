<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_layout_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">
        <ImageView android:id="@+id/profile_picture"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/propic"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <TextView android:id="@+id/profile_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textStyle="bold"
        android:text="Rishiraj Randive"
        android:layout_gravity="center"
        />
    <TextView android:id="@+id/profle_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:text="randive.rishiraj@gmail.com"
        />
    <Button android:id="@+id/profile_logout"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Logout"
        android:layout_marginTop="10dp"/>

</LinearLayout>