<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.android.shelter.user.tenant.favorite.FavoriteFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fav_scroll_view">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/my_favorites_recycler_view"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
            <TextView android:id="@+id/fav_text_empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="No favorites to show, please sign in!"
                android:textSize="15dp"
                android:gravity="center"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
