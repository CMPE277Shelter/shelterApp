<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    tools:context=".user.tenant.search.SearchPropertyPagerActivity">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_1"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/search_property_toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/detail_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/detail_thumbnail">
                <ToggleButton
                    android:id="@+id/detail_fav_toggle_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:focusableInTouchMode="false"
                    android:background="@drawable/check"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:paddingRight="8dp"
                    android:paddingTop="3dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:textOff=""
                    android:textOn=""/>
                <TextView
                    android:id="@+id/detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:paddingLeft="8dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="0dp"
                    android:textColor="#222"
                    android:textStyle="bold"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_name"
                    android:id="@+id/detail_address"
                    android:maxLines="2"
                    android:paddingLeft="8dp"
                    android:paddingTop="3dp"
                    android:textColor="#666"
                    android:textSize="14dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_address"
                    android:id="@+id/detail_rent"
                    android:maxLines="1"
                    android:paddingLeft="8dp"
                    android:paddingTop="3dp"
                    android:textColor="#666"
                    android:textStyle="bold"
                    android:textSize="18dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_address"
                    android:layout_toRightOf="@+id/detail_rent"
                    android:id="@+id/detail_type"
                    android:maxLines="1"
                    android:paddingLeft="8dp"
                    android:paddingTop="8dp"
                    android:textColor="#666"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_type"
                    android:id="@+id/detail_baths"
                    android:maxLines="1"
                    android:paddingLeft="8dp"
                    android:paddingTop="3dp"
                    android:textColor="#666"
                    android:textSize="14dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/detail_baths"
                    android:layout_below="@id/detail_type"
                    android:id="@+id/detail_beds"
                    android:maxLines="1"
                    android:paddingLeft="8dp"
                    android:paddingTop="3dp"
                    android:textColor="#666"
                    android:textSize="14dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/detail_beds"
                    android:layout_below="@id/detail_type"
                    android:id="@+id/detail_floorArea"
                    android:maxLines="1"
                    android:paddingLeft="8dp"
                    android:paddingTop="3dp"
                    android:textColor="#666"
                    android:textSize="14dp" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/card_view_1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/detail_landlord_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingLeft="8dp"
                android:paddingTop="3dp"
                android:paddingBottom="0dp"
                android:textColor="#222"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Landlord's Contact"/>
            <TextView
                android:id="@+id/detail_landlord_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_landlord_info"
                android:paddingLeft="8dp"
                android:paddingTop="3dp"
                android:paddingBottom="0dp"
                android:textColor="#222"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/detail_landlord_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_landlord_email"
                android:paddingLeft="8dp"
                android:paddingTop="3dp"
                android:paddingBottom="0dp"
                android:textColor="#222"
                android:textSize="14sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/card_view_2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/detail_property_desc_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingLeft="8dp"
                android:paddingTop="3dp"
                android:paddingBottom="0dp"
                android:textColor="#222"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Description"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_property_desc_header">
                <TextView
                    android:id="@+id/detail_property_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="0dp"
                    android:textColor="#222"
                    android:textSize="16sp"
                    android:text="prasanna.gajbhiye@gmail.com"/>
            </ScrollView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.Toolbar
        android:id="@+id/search_property_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/AppTheme.PopupOverlay">
    </android.support.v7.widget.Toolbar>
</RelativeLayout>
