<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:cardview="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/header"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:adjustViewBounds="true"
                    android:src="@drawable/header">
                </ImageView>
            </RelativeLayout>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                cardview:cardElevation="4dp"
                cardview:cardCornerRadius="5dp"
                android:layout_marginTop="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/trending_thumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/relrel"
                        android:layout_below="@+id/trending_thumbnail">
                        <TextView
                            android:id="@+id/trending_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:paddingLeft="8dp"
                            android:paddingTop="1dp"
                            android:paddingBottom="0dp"
                            android:textColor="#222"
                            android:textStyle="bold"
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/trending_name"
                            android:id="@+id/trending_address"
                            android:maxLines="2"
                            android:paddingLeft="8dp"
                            android:paddingTop="1dp"
                            android:textColor="#666"
                            android:textSize="12sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/trending_address"
                            android:id="@+id/trending_rent"
                            android:maxLines="1"
                            android:paddingLeft="8dp"
                            android:paddingTop="1dp"
                            android:textColor="#666"
                            android:textStyle="bold"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/trending_address"
                            android:layout_toRightOf="@+id/trending_rent"
                            android:id="@+id/trending_type"
                            android:maxLines="1"
                            android:paddingLeft="8dp"
                            android:paddingTop="1dp"
                            android:textColor="#666"
                            android:textSize="12sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/trending_type"
                            android:id="@+id/trending_baths"
                            android:maxLines="1"
                            android:paddingLeft="8dp"
                            android:paddingTop="1dp"
                            android:textColor="#666"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/trending_baths"
                            android:layout_below="@id/trending_type"
                            android:id="@+id/trending_beds"
                            android:maxLines="1"
                            android:paddingLeft="8dp"
                            android:paddingTop="1dp"
                            android:textColor="#666"
                            android:textSize="12sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/trending_beds"
                            android:layout_below="@id/trending_type"
                            android:id="@+id/trending_floorArea"
                            android:maxLines="1"
                            android:paddingLeft="8dp"
                            android:paddingTop="1dp"
                            android:textColor="#666"
                            android:textSize="12sp" />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_below="@id/relrel"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#333333"
                        android:text="Trending Property"
                        android:id="@+id/trending_textView"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="8dp" />
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
